{
	"name": "Ubuntu+",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "ubuntu-22.04"
		}
	},
	"runArgs": [
		"--network=host", 
		"--device=/dev/kvm",
		"--env-file", ".devcontainer/devcontainer.env",
		"-v", "/tmp/.X11-unix:/tmp/.X11-unix"
	],
	"containerEnv": {
		"DISPLAY": "unix:0" // Find display with `echo $DISPLAY`
	},
	"postCreateCommand": "./.devcontainer/setup",
	"postStartCommand": "cargo tauri android init",
	"remoteUser": "vscode",
	"features": {
		"node": "lts",
		"rust": "latest"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"serayuzgur.crates",
				"vadimcn.vscode-lldb",
				"tamasfe.even-better-toml",
				"mutantdino.resourcemonitor",
				"rust-lang.rust-analyzer",
				"tauri-apps.tauri-vscode"
			]
		}
	}
}