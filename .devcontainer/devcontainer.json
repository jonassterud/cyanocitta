{
	"name": "Ubuntu!",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "ubuntu-22.04"
		}
	},
	"runArgs": [
		"--privileged",
		"--network=host"
	],
	"postCreateCommand": "./.devcontainer/setup",
	"remoteUser": "vscode",
	"features": {
		"node": "lts",
		"rust": "latest"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"serayuzgur.crates",
				"vadimcn.vscode-lldb",
				"tamasfe.even-better-toml",
				"mutantdino.resourcemonitor",
				"rust-lang.rust-analyzer",
				"tauri-apps.tauri-vscode"
			]
		}
	}
}