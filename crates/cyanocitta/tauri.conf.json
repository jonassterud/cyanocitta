{
    "build": {
        "beforeBuildCommand": "",
        "beforeDevCommand": "",
        "devPath": "ui",
        "distDir": "ui",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "cyanocitta",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "clipboard": {
                "writeText": true
            }
        },
        "bundle": {
            "active": true,
            "category": "SocialNetworking",
            "copyright": "Copyright (c) 2023 Jonas Mathisrud Sterud",
            "deb": {
                "depends": []
            },
            "externalBin": [],
